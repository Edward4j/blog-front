<h1>This in new article</h1>

<div class="article-form">

  <label for="new-author">Author:</label>

  {{input
    type="text"
    id="new-author"
    placeholder="Who wrote the article?"
    value=author
    }}

  <br><br>

  <label for="new-title">Title:</label>

  {{input
    type="text"
    id="new-title"
    placeholder="What an amazing article comes?"
    value=title
  }}

  <br><br>

  <label for="new-body">Body:</label>

  {{textarea
    cols="80"
    rows="6"
    id="new-body"
    placeholder="Here the story begins..."
    value=body
  }}

  <br><br>

  <label for="new-isbn">ISBN:</label>

  {{input
    type="number"
    id="new-isbn"
    placeholder="Put ISBN here"
    value=isbn
  }}

  <br><br>

  <label for="new-price">Price $:</label>

  {{input
    type="number"
    id="new-price"
    placeholder="Input Price here"
    value=price
  }}

  <br><br>

  <div>
    <button class="button-indent" {{action "save"}}>Create Article</button>
    <button class="button-indent" {{action "cancel"}}>Cancel</button>
  </div>

</div>
