{{#link-to "articles" class="custom-link"}}Back to the Articles list{{/link-to}}

<h3>Article #{{model.id}} Show</h3>

{{#each this.model.errors.title as |error|}}
  <div class="error">{{error.message}}</div>
{{/each}}

{{#each this.model.errors.body as |error|}}
  <div class="error">{{error.message}}</div>
{{/each}}

<h2>Title: {{model.title}}</h2>

<p>Author: {{model.author}}</p>
<p>ISBN: {{model.isbn}}</p>
<p>Price: {{format-currency model.price sign="$"}}</p>

{{#if this.isExpanded}}
  <br><br>
  <button {{action "toggleBody"}}>Hide Body</button>
  <hr class="hr-body">
  <div class="body">
    {{model.body}}
  </div>
{{else}}
  <button {{action "toggleBody"}}>Show Body</button>
{{/if}}

<br><br><br>

<div>
  {{#link-to "articles.edit" model class="custom-link"}}Edit Article{{/link-to}}
</div>

<br><br>

{{#link-to "article.new" class="custom-link"}}Add new Article{{/link-to}}
